@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/app")
<header class="intro" ng-controller="LoginController">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form ng-submit="login()" role="form">
                        <div class="form-group">
                            <label for="userName">User Name:</label>
                            <input type="text" class="form-control" ng-model="loginForm.userName" id="userName" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" ng-model="loginForm.password" />
                        </div>
                        <div class="checkbox">
                            <label for="rememberMe">Remember Me:</label>
                            <input type="checkbox" id="rememberMe" ng-model="loginForm.rememberMe" />
                        </div>
                        <br />
                        <br />
                        <a href="/account/register" class="registerlink">Register</a>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div>
            </div>
            <div class="row"></div>
        </div>
    </div>
</header>
